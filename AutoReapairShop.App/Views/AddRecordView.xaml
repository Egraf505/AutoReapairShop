<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vml="clr-namespace:AutoReapairShop.App.ViewModels;assembly=AutoReapairShop.App"
             x:Class="AutoReapairShop.App.Views.AddRecordView"
             Title="Заполните форму">

    <ContentPage.BindingContext>
        <vml:AddRecordViewModel/>
    </ContentPage.BindingContext>

    <ScrollView HorizontalScrollBarVisibility="Never" VerticalScrollBarVisibility="Never">
        
        <VerticalStackLayout Spacing="10">
            <Label Text="Заголовок"/>
            <Entry MaxLength="200" Text="{Binding Title, Mode=TwoWay}"/>

            <Label Text="Марка авто"/>
            <Entry MaxLength="200" Text="{Binding AutoMark, Mode=TwoWay}"/>

            <Label Text="Описание"/>
            <Entry Text="{Binding Description, Mode=TwoWay}"/>

            <Button Text="Записаться" Command="{Binding AddRecordBtn}"/>
        </VerticalStackLayout>
        
    </ScrollView>
</ContentPage>